{{#if updatePostForm}}
  <h1>Update Post</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="user">User</label>
          {{input value=user id="user" placeholder=post.user}}
        </div>

        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=post.title}}
        </div>

        <div class="form-group">
          <label for="text">Text</label>
          {{input value=text id="text" placeholder=post.text}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=post.image}}
        </div>

        <button {{action 'update' post}} class="btn btn-xs btn-default">Save Post</button>
      </form>
    </div>
{{else}}
    <button {{action 'updatePostForm'}} class="btn btn-xs btn-primary">Update Post</button>
{{/if}}
